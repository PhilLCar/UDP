  "version": "0.2.0",
  "configurations": [
    {
      "name": "SERVER (C++)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/test_cpp",
      "args": [ "-s" ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "Build",
      "miDebuggerPath": "/usr/bin/gdb"
    },
    {
